<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
  <div class="input-field">
    <input id="title" name="title" type="text" value="{{course.title}}" class="validate" required>
    <label for="for_title">Name course</label>
    <span class="helper-text" data-error="Add name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" value="{{course.price}}" class="validate" required>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" value="{{course.img}}" class="validate" required>
    <label for="img">URL image course</label>
    <span class="helper-text" data-error="Add url"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit" class="btn red">Remove</button>
</form>